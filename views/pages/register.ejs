<%- include('../partials/header') %>
  <title>Kindred | Register</title>
</head>
<body>
  <div class="pre-footer">
    <div class="full-page-content">
      <h1 class="page-heading">Register</h1>
  
      <div class="border-box-wrapper">
        <%- include('../partials/borders') %>
  
        <div class="border-box-content">
  
            <!-- Makes POST request to /register route -->
          <form class="reg-form" action="/register" method="POST">
  
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-input" name="email" required>
            </div>
  
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-input" name="password" required>
            </div>
  
            <div class="form-group">
              <label for="profile-name">Profile Name</label>
              <input type="text" class="form-input" name="profile-name" required>
            </div>
  
            <div class="form-group location-group">
              <label for="loc-input">Location</label>
              <input class="form-input loc-input" type="text" placeholder="Search for a place...">
              
              <!-- Chosen Google location -->
              <div class="loc-details">
                <div class="loc-detail-wrapper">
                  <span>Place:</span>
                  <textarea name="formattedAddress" class="loc-detail" required onfocus="blur();"></textarea>
                </div>
                <div class="loc-detail-wrapper">
                  <span>Country:</span>
                  <input name="countryLong" class="loc-detail" required onfocus="blur();"></input>
                </div>
              </div>
              
              <!-- Used to submit calculated address information from Google API -->
              <div class="full-address fully hidden"></div>
              <input class="fully-hidden loc-detail" name="googlePlaceId"></input>
              <input class="fully-hidden loc-detail" name="lat"></input>
              <input class="fully-hidden loc-detail" name="lng"></input>
              <input class="fully-hidden loc-detail" name="countryShort"></input>
              <input class="fully-hidden loc-detail" name="placeName"></input>
            </div>
  
            <div class="login-btns-wrapper">
              <button type="submit" class="grey-btn">Register</button>
  
              <a class="social-btn" href="/auth/google">
                <div class="social-inner-wrapper">
                  <img src="images/btn_google_light_normal_ios.svg" alt="">
                  <span>Sign up with Google</span>
                </div>
              </a>
            </div>
            
          </form>
  
        </div>
      </div>
  
    </div>
  </div>

  <div class="footer">
    <div class="back-btns-wrapper">
      <a class="white-btn" href="/login" role="button">Log In</a>
      <a class="grey-btn" href="/" role="button">Back to home</a>
    </div>
  </div>

  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBupuPl_TCETkPatiOhkFxBV53iCO72IHY&libraries=places"></script>
  <script type="module" src="/js/pages/register.js"></script>

</body>
</html>
