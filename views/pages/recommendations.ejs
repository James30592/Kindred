<%- include('../partials/header') %>
  <title>Kindred | Recommendations</title>
  <meta name="description" content="Get recommendations from the people similar to you around the world.">
</head>
<body>
  <div class="pre-footer">
    <%- include('../partials/navbar') %>

    <main class="page-content">
      <div class="page-heading-wrapper">
        <h1 class="page-heading">Recommendations</h1>
        <h2 class="page-sub-heading h-size-6">Get recommendations from people that share your tastes.</h2>
      </div>
  
      <div class="rec-input-container">

        <!-- Input panel -->
        <div class="cat-selects">

          <div class="border-box-wrapper">
            <%- include('../partials/borders') %>
            <div class="border-box-content">
              <div class="recommendations-for">
                <h2 class="recs-input-heading h-size-4">Recommendations for:</h2>
                <%- include('../partials/recForCategoryCheckboxes') %>
              </div>
            </div>
          </div>
      
          <div class="border-box-wrapper">
            <%- include('../partials/borders') %>
            <div class="border-box-content">
              <div class="based-on">
                <h2 class="recs-input-heading h-size-4">Based on:</h2>
                <%- include('../partials/basedOnCategoryCheckboxes') %>
              </div>
            </div>

            <div class="pop-btn-container">
              <button class="pop-btn info-btn" aria-label="Based on categories tip">
                <i class="fa-solid fa-circle-info"></i>
                <span class="pop-btn-content info-txt fully-hidden transparent">You must answer at least 6 questions in a category before you can use it to generate recommendations.</span>
              </button>
            </div>

          </div>

        </div>

        <div class="centre-content-h">
          <button class="get-recs-btn kindred-recs-btn blue-btn">Get Recommendations</button>
        </div>

      </div>
  
      <!-- Recommendations list -->
      <div class="border-box-wrapper white-fade">
        <%- include('../partials/borders') %>
        <div class="border-box-content recommendations-list q-source">
          
          <div class="header-row">
            <div class="pos-rel">
              <span>Score</span>
              <button class="pop-btn info-btn header-row-info-btn" aria-label="Predicted rating tip">
                <i class="fa-solid fa-circle-info"></i>
                <span class="pop-btn-content info-txt info-txt-right fully-hidden transparent">Your predicted rating for this item.</span>
              </button>
            </div>
            <span></span>
            <span>Title</span>
            <span>Category</span>
            <span></span>
          </div>

          <hr>
          
          <div class="centre-content-h">
            <div class="loader fade-trans fully-hidden transparent"></div>
          </div>
          
          <div class="content fade-trans"></div>
        </div>
      </div>

      <div class="question-modes">
        <!-- Single answer mode -->
        <%- include("../partials/questions/singleAnswerMode") %>
      </div>

    </main>
  </div>

  <div class="footer">
    <div class="back-btns-wrapper">
      <a class="grey-btn" href="/profile">Back to Profile</a>
    </div>
  </div>

  <script type="module" src="/bundles/recommendations.bundle.js"></script>

</body>
</html>