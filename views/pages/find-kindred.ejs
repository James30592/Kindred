<%- include('../partials/header') %>
  <title>Kindred | Find Kindred</title>
</head>
<body>
  <div class="pre-footer">
    <%- include('../partials/navbar') %>

    <div class="page-content">
      <h1 class="main-header recs-header">Find Kindred</h1>

      <!-- Input panel -->
      <div class="kindred-input-container">
        <div class="cat-selects">
          <div class="border-box-wrapper">
            <%- include('../partials/borders') %>
            <div class="border-box-content">
              <div class="based-on">
                <%- include('../partials/categoryCheckboxesLimitSelects') %>
              </div>
            </div>
  
            <button class="info-btn">
              <i class="fa-solid fa-circle-info"></i>
              <span class="info-txt fully-hidden transparent">You must answer at least 6 questions in a category before you can use it to find Kindred.</span>
            </button>
          </div>
        </div>
  
        <div class="centre-content-h">
          <button class="find-kindred-btn kindred-recs-btn blue-btn">Find Kindred</button>
        </div>
      </div>

      <!-- Kindred list -->
      <div class="border-box-wrapper white-fade">
        <%- include('../partials/borders') %>
        <div class="border-box-content kindred-list">
          
          <div class="header-row">
            <span>Similarity score</span>
            <span>Username</span>
            <span>Location</span>
            <span>Positivity Difference</span>
          </div>

          <hr>
          
          <div class="centre-content-h">
            <div class="loader fade-trans fully-hidden transparent"></div>
          </div>
          
          <div class="content fade-trans"></div>
        </div>
      </div>

    </div>
  </div>

  <div class="footer">
    <div class="back-btns-wrapper">
      <a class="grey-btn" href="/profile" role="button">Back to Profile</a>
    </div>
  </div>

<script type="module" src="/js/pages/find-kindred.js"></script>

<%- include('../partials/endBody') %>
