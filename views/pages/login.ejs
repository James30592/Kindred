<%- include('../partials/header') %>
  <title>Kindred | Login</title>
</head>
<body>
  <div class="pre-footer">
    <div class="full-page-content">
      <h1 class="page-heading">Login</h1>
  
      <div class="border-box-wrapper">
        <%- include('../partials/borders') %>
  
        <div class="border-box-content">
  
          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            
            <div class="login-btns-wrapper">
              <button type="submit" class="btn btn-dark">Login</button>

              <a class="social-btn" href="/auth/google">
                <img src="images/btn_google_light_normal_ios.svg" alt="">
                <span>Sign in with Google</span>
              </a>
            </div>
          </form>
        
        </div>
      </div>
    
    </div>
  </div>

  <div class="footer">
    <div class="back-btns-wrapper">
      <a class="white-btn" href="/register" role="button">Register</a>
      <a class="grey-btn" href="/" role="button">Back to home</a>
    </div>
  </div>

<%- include('../partials/endBody') %>
