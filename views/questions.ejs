<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Questions</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          
          <h2 class="main-header" data-cat-Type="<%= categoryTypeName %>" 
            data-cat="<%= categoryName %>">
            <%= categoryTypeName %> - <%= categoryName %></h2>

          <hr>
          <button>Auto Queue</button>
          <button>Search</button>
          <button>Current Answers</button>
          <hr>

          <!-- Search box -->
          <h3>Search...</h3>
          <input type="text" name="search" placeholder="Enter film title...">
          <button>-></button>
          <hr>

          <!-- Rating panel -->
          <div>
            <div>
              <p class="curr-question">Placeholder...</p>
            </div>
            <div class="rate-panel">
              <button class="change-score-btn big-change-btn down-btn"><<</button>
              <button class="change-score-btn small-change-btn down-btn"><</button>
              <span class="rating-score">5</span>
              <button class="change-score-btn small-change-btn up-btn">></button>
              <button class="change-score-btn big-change-btn up-btn">>></button>
              <br>
              <button class="skip-btn">Skip this one</button>
              <button class="rate-btn">Rate it!</button>
            </div>
          </div>
          <hr>

          <!-- Current Answers -->



          <a class="btn btn-light" href="/questions-menu" role="button">Back to questions menu</a>
          <a class="btn btn-light" href="/profile" role="button">Back to profile</a>
        </div>
      </div>
    </div>

  </div>
</div>
 
<script type="module" src="/js/questions.js"></script>

<%- include('partials/footer') %>
